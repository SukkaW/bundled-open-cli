{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2021"],
    "module": "Preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
