{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2021"],
    "module": "Preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "rollup.config.ts", "scripts/**/*.ts"]
}
